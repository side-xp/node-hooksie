{
  "name": "hooksie",
  "private": true,
  "version": "0.0.2",
  "author": "Hubert GROSSIN",
  "type": "module",
  "description": "Utility for creating hooks with reliable callbacks in an application.",
  "homepage": "https://github.com/side-xp/node-hooksie#readme",
  "main": "hooksie.js",
  "files": [
    "hooksie.js",
    "index.d.ts",
    "CHANGELOG.md"
  ],
  "bugs": {
    "url": "https://github.com/side-xp/node-hooksie/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/side-xp/node-hooksie.git"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "node -e \"fs.rmSync('./dist',{recursive:true,force:true});\"",
    "build": "tsc && vite build",
    "prepack": "npm run build && node -e 'import(\"./scripts/pack.mjs\").then(pack => pack.copyDistToRootFolder())'",
    "postpack": "node -e 'import(\"./scripts/pack.mjs\").then(pack => pack.deleteOutputFilesFromRootFolder())'",
    "test": "node ./tests/test.ts"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4"
  }
}
